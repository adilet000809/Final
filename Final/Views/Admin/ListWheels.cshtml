@model IEnumerable<Wheel>

@{
    ViewBag.Title = "All wheels";
    Layout = "_Layout";
}

<h2>All Wheels</h2>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3 w-auto" asp-controller="Admin" asp-action="CreateWheel">Create</a>
    
    <div class="card mb-3">
        <div class="card-header">
            Products
        </div>
        <div class="card-body">
            @foreach (var wheel in Model)
            {
                <div class="col-3 col-md-4 col-sm-12">
                    <h5>@wheel.Name</h5>
                    <img alt="Product" src="~/img/wheel/@wheel.Image" class="img-thumbnail"/>
                    <div class="row">
                        <a class="btn btn-danger ml-4 mt-2" asp-controller="Admin" asp-action="DeleteWheel" asp-route-id="@wheel.Id">Delete</a>
                        <a class="btn btn-primary ml-4 mt-2" asp-controller="Admin" asp-action="EditWheel" asp-route-id="@wheel.Id">Edit</a>
                    </div>
                </div>
            }                                                                      
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            There are no products
        </div>
        <div class="card-body">
            <h5 class="card-title">Create a product</h5>
            <a class="btn btn-primary w-auto" asp-controller="Admin" asp-action="CreateWheel">Create</a>
        </div>
    </div>
}
