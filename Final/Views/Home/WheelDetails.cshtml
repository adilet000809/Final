@{
    ViewBag.Title = "Wheel";
    Layout = "_Layout";
}

<div class="container align-items-center" id="app">
    <div class="row align-items-center">
        <h2>Tire: @ViewBag.Wheel.Name</h2>
    </div>
    <div class="mt-3">
        <div class="card mb-4">
            <div class="card-body p-lg-4 p-xl-5">
                <div class="row">
                    <div class="col-12 col-sm-9 col-lg-8">
                        <p class="m-0 p-0 text-uppercase font-weight-bold">Tire</p>
                        <h2 class="h2 mb-3 mt-1">@ViewBag.Wheel.Name</h2>
                        <p class="pr-lg-5 text-muted">@ViewBag.Wheel.Description</p>
                        <div class="row my-4">
                            <div class="col col-sm-6 text-nowrap">
                                <div class="d-flex mb-2">
                                    <span class="font-weight-bold mr-2">Width: @ViewBag.Wheel.Width</span>
                                </div>
                                <div class="d-flex mt-3">
                                    <span class="font-weight-bold mr-2">Price: @ViewBag.Wheel.Price KZT</span>
                                </div>
                            </div>
                            <div class="col col-sm-6 text-nowrap">
                                <div class="d-flex mb-2">
                                    <span class="font-weight-bold mr-2">Diameter: @ViewBag.Wheel.Diameter</span>
                                </div>
                                <div class="d-flex mt-3">
                                    <span class="font-weight-bold mr-2">Holes: @ViewBag.Wheel.Hole</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-6">
                                    <button product-id="@ViewBag.Wheel.Id" category-id="@ViewBag.Wheel.CategoryId" v-on:click.stop.prevent="addToCart" class="btn btn-outline-primary mt-3">Add to cart</button>
                                </div>
                                <div class="col-sm-12 col-6">
                                    <p v-if="error" class="text-danger">Something went wrong!</p>
                                    <p v-if="success" class="text-success">Successful! Quantity: {{quantity}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-lg-4 d-none d-sm-flex align-items-start align-items-lg-center">
                        <img src="~/img/wheel/@ViewBag.Wheel.Image" alt="@ViewBag.Wheel.Name" class="img-fluid" width="100%" height="400">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/vue.resource/1.0.3/vue-resource.min.js"></script>
<script src="~/js/addToCart.js"></script>





